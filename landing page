   <!-- JAVASCRIPT FOR COPY TO CLIPBOARD FUNCTIONALITY -->
   <script>
       const teaserPrompt = document.getElementById('teaser-prompt');
       const copyButton = document.getElementById('copy-button');
       const ctaButtons = [document.getElementById('cta-button-hero'), document.getElementById('cta-button-final')];
       const productUrl = 'https://8332170281457.gumroad.com/l/tiaxvy'; // Added Gumroad URL

       const fullPromptText = `**CPO Persona:** Act as a seasoned, high-stakes sales director. Your job is to draft a follow-up email sequence that maximizes urgency and forces the prospect to commit on a delayed enterprise deal. Tone must be firm, professional, and confident.

**Context/Task:** The prospect, [PROSPECT NAME], confirmed strong interest in our enterprise SaaS package 10 days ago. They have since missed two check-in calls. The deal value is $150,000. Your goal is to draft the final 'take it or leave it' email.

**Deliverable:** Write the full, professional 'commitment device' email (Email #3 in the sequence) that:
1.  Removes our product from the prospect's decision set by politely stating we must prioritize other committed clients (creating FOMO/scarcity).
2.  Provides a clear, hard deadline for action (e.g., end of the business week).
3.  Asks a single, direct question requiring a YES or NO answer.`;

       function copyToClipboard(event) {
           const tempTextArea = document.createElement('textarea');
           tempTextArea.value = fullPromptText;
          
           tempTextArea.style.position = 'fixed';
           tempTextArea.style.top = '-9999px';
           tempTextArea.style.left = '-9999px';
          
           document.body.appendChild(tempTextArea);
           tempTextArea.select();

           let success = false;
           try {
               success = document.execCommand('copy');
           } catch (err) {
               console.error('Copy failed (execCommand):', err);
           }
          
           document.body.removeChild(tempTextArea);

           const targetButton = event.currentTarget.id === 'copy-button' ? copyButton : teaserPrompt;
          
           if (success) {
               targetButton.textContent = 'COPIED!';
               targetButton.classList.add('bg-green-600', 'hover:bg-green-700', 'text-white');
               targetButton.classList.remove('bg-gray-700', 'hover:bg-gold', 'hover:text-navy');
               setTimeout(() => {
                   if (targetButton.id === 'copy-button') {
                        targetButton.textContent = 'Copy Prompt';
                        targetButton.classList.remove('bg-green-600', 'hover:bg-green-700', 'text-white');
                        targetButton.classList.add('bg-gray-700', 'hover:bg-gold', 'hover:text-navy');
                   } else {
                        targetButton.textContent = targetButton.getAttribute('data-original-text');
                        targetButton.classList.remove('bg-green-600', 'hover:bg-green-700', 'text-white');
                   }
               }, 2000);
           } else {
               console.error('Final copy failure.');
           }
       }

       // Store original text for the text block itself
       teaserPrompt.setAttribute('data-original-text', teaserPrompt.textContent);

       teaserPrompt.addEventListener('click', copyToClipboard);
       copyButton.addEventListener('click', copyToClipboard);

       // Functional click handler for CTA buttons (redirects to Gumroad)
       ctaButtons.forEach(button => {
           button.addEventListener('click', (event) => {
               event.preventDefault(); // Stop default action
              
               // Show redirection state before navigating
               const originalText = button.textContent;
               button.textContent = 'Redirecting to Checkout...';
               button.classList.remove('btn-primary');
               button.classList.add('bg-green-600');
              
               // Navigate after a slight visual delay
               setTimeout(() => {
                   window.location.href = productUrl;
               }, 500);
           });
       });
   </script>
